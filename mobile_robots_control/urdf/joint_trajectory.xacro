<?xml version="1.0"?>
<robot name="robot" xmlns:xacro="http://ros.org/wiki/xacro"> <!-- name = gazebo namespace -->
  
  <xacro:property name="package_name" value="mobile_robots_control"/>
  <xacro:property name="PI" value="3.14159265"/>

  <xacro:include filename="$(find ${package_name})/urdf/joint_trajectory_gz.xacro"/>
  
  
  <link name="world"/>
  
  <joint name="base_joint" type="fixed">
    <parent link="world"/>
    <child link="base_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <link name="base_link">
    <visual>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <geometry>
        <box size="0.08 0.08 0.1"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <geometry>
        <box size="0.08 0.08 0.1"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <mass value="10"/>
      <inertia ixx="0.00333333" ixy="0.0" ixz="0.0"  iyy="0.00333333" iyz="0.0"  izz="0.006"/>
    </inertial>
  </link>
  
  
  <joint name="pos0_joint" type="prismatic">
    <parent link="base_link"/>
    <child link="pos0_link"/>
    <origin xyz="0 0 0.05" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
    <!--dynamics damping="0.1" friction="0.4"/--> <!-- These parameters are ignored, only joint limits are respected -->
    <limit effort="5" velocity="0.01" lower="-0.8" upper="0.8"/>
  </joint>
  
  <link name="pos0_link">
    <visual>
      <origin xyz="0 0 0.07" rpy="0 0 0"/>
      <geometry>
        <box size="0.16 0.04 0.04"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <geometry>
        <box size="0.16 0.04 0.04"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="10"/>
      <inertia ixx="0.333333" ixy="0.0" ixz="0.0"  iyy="0.333333" iyz="0.0"  izz="0.6"/>
    </inertial>
  </link>
  
  
  <joint name="pos1_joint" type="revolute">
    <parent link="pos0_link"/>
    <child link="pos1_link"/>
    <origin xyz="0 0 0.07" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <!--dynamics damping="1" friction="4"/--> <!-- dynamic setup values are not used, only position limits-->
    <limit effort="5" velocity="0.01" lower="-2.9" upper="2.9"/>
  </joint>
  
  <link name="pos1_link">
    <visual>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <geometry>
        <box size="0.08 0.12 0.04"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <geometry>
        <box size="0.08 0.12 0.04"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="5"/>
      <inertia ixx="0.333333" ixy="0.0" ixz="0.0"  iyy="0.333333" iyz="0.0"  izz="0.6"/>
    </inertial>
  </link>

</robot>

